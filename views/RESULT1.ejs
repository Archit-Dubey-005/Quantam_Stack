        document.getElementById('exportBtn').addEventListener('click', async function() {
    const results = JSON.parse(sessionStorage.getItem('solarPredictionResults') || '{}');

    if (!results || !results.site) {
        alert("No prediction results found. Please run a prediction first.");
        return;
    }

    // If we already have a generated file from the last prediction, download it directly
    if (results.downloadUrl) {
        const url = new URL(results.downloadUrl, window.location.origin).toString();
        const directLink = document.createElement('a');
        directLink.href = url;
        directLink.download = url.split('/').pop() || 'solar_prediction_16day.csv';
        document.body.appendChild(directLink);
        directLink.click();
        directLink.remove();
        return;
    }

    // Fallback: re-generate and then download
    const payload = {
        location: results.site.location,
        numPanels: results?.forecast?.numPanels || 20,
        panelArea: results?.forecast?.panelArea || 1.6,
        panelEfficiency: results?.forecast?.panelEfficiency || 0.2,
        inverterEfficiency: results?.forecast?.inverterEfficiency || 0.96,
        tilt: results?.optimization?.currentTilt || null,
        azimuth: results?.optimization?.currentAzimuth || 180,
        tempCoeff: -0.004,
        soilingFactor: 0.95,
        systemDerate: 0.86,
        inverterRatedPower: results?.forecast?.inverterRatedPower || null,
        noct: 45
    };

    try {
        const response = await fetch('/api/predict/16days', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify(payload)
        });

        const data = await response.json();

        if (data.success && data.downloadUrl) {
            const url = new URL(data.downloadUrl, window.location.origin).toString();
            const link = document.createElement('a');
            link.href = url;
            link.download = url.split('/').pop() || 'solar_prediction_16day.csv';
            document.body.appendChild(link);
            link.click();
            link.remove();
            // persist for later downloads without regen
            try { sessionStorage.setItem('solarPredictionResults', JSON.stringify({ ...results, downloadUrl: data.downloadUrl })); } catch (_) {}
        } else {
            console.error("Export failed:", data);
            alert("Export failed. See console for details.");
        }
    } catch (err) {
        console.error("Error exporting CSV:", err);
        alert("Error exporting CSV. See console for details.");
    }
});






    </script> 
       
</body>
</html>