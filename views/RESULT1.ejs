<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Solar Power Prediction Platform</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }
        
        body {
            background: linear-gradient(135deg, #1a2a6c, #b21f1f, #fdbb2d);
            color: #333;
            min-height: 100vh;
            padding: 20px;
        }
        
        .container {
            max-width: 1200px;
            margin: 0 auto;
            background: rgba(255, 255, 255, 0.9);
            border-radius: 15px;
            padding: 20px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.2);
        }
        
        header {
            text-align: center;
            margin-bottom: 20px;
            padding-bottom: 20px;
            border-bottom: 1px solid #eee;
        }
        
        h1 {
            font-size: 2.5rem;
            margin-bottom: 10px;
            color: #1a2a6c;
        }
        
        .subtitle {
            font-size: 1.1rem;
            color: #666;
        }
        
       nav {
            display: flex;
            justify-content: center;
            margin: 20px 0;
            flex-wrap: wrap;
            gap: 10px;
        }
        
        nav a {
            background: #1a2a6c;
            color: white;
            padding: 12px 25px;
            border-radius: 30px;
            text-decoration: none;
            display: flex;
            align-items: center;
            gap: 8px;
            transition: all 0.3s ease;
        }
        
        nav a:hover, nav a.active {
            background: #fdbb2d;
            color: #1a2a6c;
            transform: translateY(-2px);
        }
        
        
        .dashboard {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 20px;
            margin-bottom: 30px;
        }
        
        .card {
            background: white;
            border-radius: 12px;
            padding: 20px;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
            text-align: center;
            transition: transform 0.3s ease;
        }
        
        .card:hover {
            transform: translateY(-5px);
        }
        
        .card h3 {
            font-size: 1rem;
            color: #444;
            margin-bottom: 10px;
        }
        
        .value {
            font-size: 2.5rem;
            font-weight: bold;
            color: #1a2a6c;
            margin-bottom: 5px;
        }
        
        .unit {
            font-size: 1rem;
            color: #888;
        }
         .chart-container {
            height: 700px;
            background: white;
            border-radius: 10px;
            padding: 20px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
            margin-bottom: 40px;
        }
        
        .chart-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 20px;
        }
        
        .chart-title {
            font-size: 18px;
            font-weight: 600;
        }
        
        .time-selector {
            display: flex;
            gap: 10px;
        }
        
        .time-btn {
            padding: 8px 15px;
            background: #eaf2f8;
            border: none;
            border-radius: 20px;
            cursor: pointer;
            font-size: 14px;
            transition: all 0.3s;
        }
        
        .time-btn.active {
            background: #3498db;
            color: white;
        }
        
        canvas {
            width: 100% !important;
            
        }
        
        
        .info-cards {
            display: grid;
            grid-template-columns: 2fr 1fr;
            gap: 30px;
        }
        
        @media (max-width: 992px) {
            .info-cards {
                grid-template-columns: 1fr;
            }
        }
        
        .weather-card, .recommendations-card {
            background: white;
            border-radius: 12px;
            padding: 20px;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
        }
        
        .weather-card h2, .recommendations-card h2 {
            font-size: 1.5rem;
            color: #1a2a6c;
            margin-bottom: 15px;
            text-align: center;
        }
        
        .weather-table {
            width: 100%;
            border-collapse: collapse;
        }
        
        .weather-table td {
            padding: 10px;
            border-bottom: 1px solid #eee;
        }
        
        .weather-table tr:last-child td {
            border-bottom: none;
        }
        
        .recommendation {
            display: flex;
            align-items: center;
            margin-bottom: 15px;
            padding: 10px;
            background: #f9f9f9;
            border-radius: 8px;
        }
        
        .recommendation input[type="checkbox"] {
            margin-right: 10px;
            width: 20px;
            height: 20px;
        }
        
        footer {
            text-align: center;
            margin-top: 30px;
            padding-top: 20px;
            border-top: 1px solid #eee;
            color: #666;
            font-weight: bold;
        }
        
        .positive {
            color: #28a745;
        }
        
        canvas {
            width: 100% !important;
            height: 550px !important;
        }
        
        .data-table-container {
            background: white;
            border-radius: 12px;
            padding: 20px;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
        }
        
        .data-table-container h2 {
            font-size: 1.5rem;
            color: #1a2a6c;
            margin-bottom: 15px;
            text-align: center;
        }
        
        .table-wrapper {
            max-height: 400px;
            overflow-y: auto;
            border: 1px solid #ddd;
            border-radius: 8px;
        }
        
        .data-table {
            width: 100%;
            border-collapse: collapse;
            font-size: 0.9rem;
        }
        
        .data-table th {
            background: #1a2a6c;
            color: white;
            padding: 12px 8px;
            text-align: left;
            position: sticky;
            top: 0;
            z-index: 10;
        }
        
        .data-table td {
            padding: 10px 8px;
            border-bottom: 1px solid #eee;
        }
        
        .data-table tr:nth-child(even) {
            background: #f9f9f9;
        }
        
        .data-table tr:hover {
            background: #e8f4fd;
        }
    </style>
</head>
<body>
    <div class="container">
        <header>
            <h1>Solar Power Prediction Platform</h1>
            <p class="subtitle">AI-powered solar energy forecasting with advanced ML optimization recommendations</p>
            
             
            
        </header>
        
        <div class="dashboard">
            <div class="card">
                <h3>Daily Output</h3>
                <div class="value">35.7</div>
                <div class="unit">kWh/day</div>
            </div>
            
            <div class="card">
                <h3>Optimal Tilt</h3>
                <div class="value">37.8°</div>
                <div class="unit">angle</div>
            </div>
            
            <div class="card">
                <h3>Efficiency Gain</h3>
                <div class="value" class="positive">+8.3%</div>
                <div class="unit">potential</div>
            </div>
            
            <div class="card">
                <h3>Annual Est.</h3>
                <div class="value">13031</div>
                <div class="unit">kWh/year</div>
            </div>

        </div>
        <div>
               <div class="chart-container">
            <div class="chart-header">
                <h2 class="chart-title">Hourly Production Forecast</h2>
                <div class="time-selector">
                    <button class="time-btn active" data-period="hourly">Hourly</button>
                    <button class="time-btn" data-period="daily">Daily</button>
                    <button class="time-btn" data-period="monthly">Monthly</button>
                </div>
            </div>
            <canvas id="productionChart"></canvas>
        </div>

        </div>
        
        <div class="info-cards">
            <div class="weather-card">
                <h2>Current Weather Conditions</h2>
                <table class="weather-table">
                    <tr>
                        <td>Location:</td>
                        <td id="wc-location">--</td>
                        <td>Temperature:</td>
                        <td id="wc-temp">--</td>
                    </tr>
                </table>
            </div>
            
            <div class="recommendations-card">
                <h2>AI Recommendations</h2>
                <div class="recommendation">
                    <!-- <input type="checkbox" id="rec1"> -->
                    <label for="rec1">Increase panel tilt angle from 30.0° to 37.8° to optimize for San Francisco's latitude</label>
                </div>
                <!-- <div class="recommendation"> -->
                    <!-- <input type="checkbox" id="rec2" checked> -->
                    <!-- <label for="rec2">Adjust azimuth angle slightly from 180.0° to 175.0° to account for local solar path</label>
                </div>
                <div class="recommendation">
                    <input type="checkbox" id="rec3">
                    <label for="rec3">Consider cleaning panels bi-monthly due to San Francisco's coastal fog deposits</label>
                </div> -->
            </div>
        </div>
        <div class="data-table-container" style="margin-top: 30px;">
            <div class="section">
                <h2>Prediction Data</h2>
                <div class="table-wrapper">
                    <table id="predictionTable" class="data-table">
                        <thead>
                            <tr>
                                <th>Timestamp</th>
                                <th>GHI (W/m²)</th>
                                <th>Temperature (°C)</th>
                                <th>AC Power (kWh)</th>
                            </tr>
                        </thead>
                        <tbody id="predictionTableBody">
                            <!-- Data will be populated by JavaScript -->
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        
        
        <footer>
            <p>Solar Power Prediction Platform © 2025 | AI-powered insights for optimal solar energy production</p>
        </footer>
    </div>

     <script>
   
         document.addEventListener('DOMContentLoaded', function() {
            // Load prediction results from sessionStorage
            const results = JSON.parse(sessionStorage.getItem('solarPredictionResults') || '{}');
            
            // Update dashboard with real data
            if (results.forecast) {
                document.querySelector('.card:nth-child(1) .value').textContent = results.forecast.dailyAverage.toFixed(1);
                document.querySelector('.card:nth-child(4) .value').textContent = Math.round(results.forecast.totalKWh * 365 / 16);
            }
            
            if (results.optimization) {
                document.querySelector('.card:nth-child(2) .value').textContent = results.optimization.optimalTilt + '°';
                document.querySelector('.card:nth-child(3) .value').textContent = '+' + results.optimization.efficiencyGain.toFixed(1) + '%';
            }
            
            // Update recommendations with real data
            if (results.recommendations && results.recommendations.length > 0) {
                const recommendationsContainer = document.querySelector('.recommendations-card');
                const existingRecommendations = recommendationsContainer.querySelectorAll('.recommendation');
                
                // Clear existing recommendations
                existingRecommendations.forEach(rec => rec.remove());
                
                // Add real recommendations
                results.recommendations.forEach((rec, index) => {
                    const recDiv = document.createElement('div');
                    recDiv.className = 'recommendation';
                    recDiv.innerHTML = `
                        <input type="checkbox" id="rec${index + 1}">
                        <label for="rec${index + 1}">${rec}</label>
                    `;
                    recommendationsContainer.appendChild(recDiv);
                });
            }
            
            // Update Current Weather Conditions (location and temperature only)
            // Location
            const locationEl = document.getElementById('wc-location');
            if (locationEl) {
                if (results.site && results.site.location) {
                    locationEl.textContent = results.site.location;
                } else {
                    locationEl.textContent = 'San Francisco, CA';
                }
            }
            
            // Temperature from first hour
            if (results.forecast && Array.isArray(results.forecast.hourly) && results.forecast.hourly.length > 0) {
                const first = results.forecast.hourly[0];
                
                const tempEl = document.getElementById('wc-temp');
                if (tempEl) {
                    if (first.temp_C !== null && first.temp_C !== undefined) {
                        tempEl.textContent = `${Number(first.temp_C).toFixed(1)}°C`;
                    } else {
                        tempEl.textContent = 'N/A';
                    }
                }
            } else {
                // Fallback temperature
                const tempEl = document.getElementById('wc-temp');
                if (tempEl) tempEl.textContent = '22.5°C';
            }
            
            // Populate prediction data table
            if (results.forecast && Array.isArray(results.forecast.hourly)) {
                populatePredictionTable(results.forecast.hourly);
            }
            
            // Data for different time periods (fallback if no real data)
            const data = {
                hourly: {
                    labels: ['6:00', '7:00', '8:00', '9:00', '10:00', '11:00', '12:00', '13:00', '14:00', '15:00', '16:00', '17:00', '18:00', '19:00'],
                    values: [0.2, 0.4, 0.8, 1.1, 1.3, 1.4, 1.4, 1.3, 1.2, 1.0, 0.7, 0.4, 0.2, 0.1]
                },
                daily: {
                    labels: ['Mon', 'Tue', 'Wed', 'Thu', 'Fri', 'Sat', 'Sun'],
                    values: [32.5, 35.7, 36.2, 34.8, 37.1, 38.5, 36.9]
                },
                monthly: {
                    labels: ['Jan', 'Feb', 'Mar', 'Apr', 'May', 'Jun', 'Jul', 'Aug', 'Sep', 'Oct', 'Nov', 'Dec'],
                    values: [800, 950, 1100, 1250, 1300, 1350, 1400, 1350, 1200, 1050, 900, 750]
                }
            };
            
            // Get canvas context
            const ctx = document.getElementById('productionChart').getContext('2d');
            
            // Create initial chart with hourly data
            let chart = new Chart(ctx, {
                type: 'line',
                data: {
                    labels: data.hourly.labels,
                    datasets: [{
                        label: 'kWh Production',
                        data: data.hourly.values,
                        backgroundColor: 'rgba(52, 152, 219, 0.2)',
                        borderColor: 'rgba(52, 152, 219, 1)',
                        borderWidth: 2,
                        pointBackgroundColor: 'rgba(52, 152, 219, 1)',
                        pointBorderColor: '#fff',
                        pointRadius: 5,
                        pointHoverRadius: 7,
                        fill: true,
                        tension: 0.3
                    }]
                },
                options: {
                    responsive: true,
                    plugins: {
                        legend: {
                            position: 'top',
                        },
                        tooltip: {
                            mode: 'index',
                            intersect: false,
                            callbacks: {
                                label: function(context) {
                                    return `${context.dataset.label}: ${context.parsed.y} kWh`;
                                }
                            }
                        }
                    },
                    scales: {
                        y: {
                            beginAtZero: true,
                            title: {
                                display: true,
                                text: 'kWh'
                            },
                            grid: {
                                color: 'rgba(0, 0, 0, 0.05)'
                            }
                        },
                        x: {
                            grid: {
                                color: 'rgba(0, 0, 0, 0.05)'
                            }
                        }
                    }
                }
            });

            let h2 = document.querySelector('.chart-title');

            // Function to update chart with real data (first 24 hours)
            function updateChartWithRealData(hourlyData) {
                const labels = [];
                const values = [];
                const firstDay = hourlyData.slice(0, 24);
                firstDay.forEach((hour) => {
                    const date = new Date(hour.timestamp);
                    const hourStr = `${date.getHours().toString().padStart(2, '0')}:00`;
                    labels.push(hourStr);
                    values.push(hour.ac_kWh);
                });
                chart.data.labels = labels;
                chart.data.datasets[0].data = values;
                chart.update();
            }

            // Update chart with real hourly data (after chart init)
            if (results.forecast && results.forecast.hourly) {
                updateChartWithRealData(results.forecast.hourly);
            }
            
            
            // Handle time period selection
            const timeButtons = document.querySelectorAll('.time-btn');
            timeButtons.forEach(button => {
                button.addEventListener('click', function() {
                    const period = this.getAttribute('data-period');
                    
                    // Update active button
                    timeButtons.forEach(btn => btn.classList.remove('active'));
                    this.classList.add('active');
                    
                    // Update chart data
                    chart.data.labels = data[period].labels;
                    chart.data.datasets[0].data = data[period].values;
                    
                    // Update y-axis title based on period
                    if (period === 'hourly') {
                        chart.options.scales.y.title.text = 'kWh';
                        h2.textContent = 'Hourly Production Forecast';
                    } else if (period === 'daily') {
                        chart.options.scales.y.title.text = 'kWh/day';
                        h2.textContent = 'Daily Production Forecast';
                    } else {
                        chart.options.scales.y.title.text = 'kWh/month';
                        h2.textContent = 'Monthly Production Forecast';
                    }
                    
                    chart.update();
                });
            });
        });
        
        // Update dashboard values based on selected day
        function updateDashboard(dayIndex) {
            document.querySelector('.card:nth-child(1) .value').textContent = dailyData.values[dayIndex].toFixed(1);
        }
        
        // Add click event to daily chart to update dashboard
        dailyChart.canvas.onclick = function(evt) {
            const points = dailyChart.getElementsAtEventForMode(evt, 'nearest', { intersect: true }, true);
            if (points.length) {
                const firstPoint = points[0];
                updateDashboard(firstPoint.index);
            }
        };
        
        // Helper function to convert wind direction degrees to compass direction
        function getWindDirection(degrees) {
            const directions = ['N', 'NNE', 'NE', 'ENE', 'E', 'ESE', 'SE', 'SSE', 'S', 'SSW', 'SW', 'WSW', 'W', 'WNW', 'NW', 'NNW'];
            const index = Math.round(degrees / 22.5) % 16;
            return directions[index];
        }
        
        // Function to populate prediction data table
        function populatePredictionTable(hourlyData) {
            const tbody = document.getElementById('predictionTableBody');
            if (!tbody) return;
            
            // Clear existing rows
            tbody.innerHTML = '';
            
            // Add rows for each hour (limit to first 100 for performance)
            const dataToShow = hourlyData.slice(0, 100);
            dataToShow.forEach((hour, index) => {
                const row = document.createElement('tr');
                const date = new Date(hour.timestamp);
                const timeStr = date.toLocaleString();
                
                row.innerHTML = `
                    <td>${timeStr}</td>
                    <td>${hour.ghi_W_m2 != null ? Number(hour.ghi_W_m2).toFixed(2) : '--'}</td>
                    <td>${hour.temp_C != null ? Number(hour.temp_C).toFixed(1) : '--'}</td>
                    <td>${hour.ac_kWh != null ? Number(hour.ac_kWh).toFixed(4) : '--'}</td>
                `;
                tbody.appendChild(row);
            });
            
            // Add summary row if there are more than 100 entries
            if (hourlyData.length > 100) {
                const summaryRow = document.createElement('tr');
                summaryRow.style.fontWeight = 'bold';
                summaryRow.style.backgroundColor = '#f0f8ff';
                summaryRow.innerHTML = `
                    <td colspan="4" style="text-align: center;">
                        Showing first 100 of ${hourlyData.length} entries. 
                        Total energy: ${hourlyData.reduce((sum, h) => sum + (h.ac_kWh || 0), 0).toFixed(2)} kWh
                    </td>
                `;
                tbody.appendChild(summaryRow);
            }
        }







    </script> 
       
</body>
</html>